@page
@model WebApp.Pages_GameConfigs.DetailsModel

@{
    ViewData["Title"] = "Details - Game Configs";
}

<h1>Details</h1>

<div>
    <h4>GameConfig</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameConfig.ConfigName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameConfig.ConfigName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardSizeX)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardSizeX)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardSizeY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardSizeY)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EShipTouchRuleReceived)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EShipTouchRuleReceived)
        </dd>
    </dl>
    
    <h4>Ship Config</h4>
        <hr />
    <dl class="row">
        @for (int i = 0; i < Model.ShipConfigs.Count; i++)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShipConfigs[i].ShipName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShipConfigs[i].ShipName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShipConfigs[i].ShipSizeX)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShipConfigs[i].ShipSizeX)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShipConfigs[i].ShipSizeY)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShipConfigs[i].ShipSizeY)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShipConfigs[i].ShipQuantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShipConfigs[i].ShipQuantity)
            </dd>
            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
            </dd>
        }
    </dl>
    
    <h4>Build Date</h4>
            <hr />
        <dl class="row">
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameConfig.ConfigBuildDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameConfig.ConfigBuildDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.GameConfig.ConfigId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
