@page
@model WebApp.Pages.Game.SetShips
@{
    ViewData["Title"] = "Game - Set Ships";
}

<h1>Current player: @Index._brain._currentPlayerNo</h1><br/><br/>
<div class="row text-center">
    <div>
        <table class="table-bordered">
            <h2>Your board</h2>
            <thead>
            <tr>
                @for (int y = 0; y < Index._brain.GetEnemyBoard().GetLength(1); y++)
                {
                    <th>
                        @y
                    </th>
                }
            </tr>
            </thead>
            <tbody>
            @for (int y = 0; y < Index._brain.GetEnemyBoard().GetLength(1); y++)
            {
                <tr style="height: 30px;">
                    @for (int x = 0; x < Index._brain.GetEnemyBoard().GetLength(0); x++)
                    {
                        <td style="width: 30px; cursor: pointer" onclick="window.location.href = '/Game/SetShips?x=@x&y=@y' ">
                            @if (Index._brain.GetEnemyBoard()[x, y].IsShip == true)
                            {
                                <text>8</text>
                            }
                            else
                            {
                                <text> </text>
                            }
                        </td>
                    }
                </tr>
            }
            </tbody>
        </table>
    </div>
    <h2>|        |</h2>
    <div>
        <h2>Available configs:</h2>
        <table class="table-bordered">
            <thead>
            <tr>
                <th>Ship Name</th>
                <th>Ship Quantity</th>
                <th>Ship size X</th>
                <th>Ship size Y</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Index._conf.ShipConfigs.Count; i++)
            {
                <tr style="height: 30px;">
                    <td>@Index._conf.ShipConfigs[i].Name</td>
                    <td>@Index._conf.ShipConfigs[i].Quantity</td>
                    <td>@Index._conf.ShipConfigs[i].ShipSizeX</td>
                    <td>@Index._conf.ShipConfigs[i].ShipSizeY</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div><br/><br/>
<button class="btn btn-primary" onclick="location.href='?playerChange=true'">Change Player</button>
<button class="btn btn-primary" onclick="location.href='../Game'">Click When Ready</button> 