@page
@using Index = WebApp.Pages.Game.Index
@model WebApp.Pages.Win

@{
    int winner = Index.Brain.CurrentPlayerNo + 1;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Player @winner won!</title>
</head>
<body>
<div class="div-center text-center">
    <h1>Winner winner, chicken dinner</h1>
    <h2>Congratulations Player @winner, you won!</h2>
    <h3>The game took you @Index.TurnCounter turns to finish!</h3><br/>
    <button class="btn btn-primary" onclick="location.href='Game/'">Start another game?</button>
</div>
</body>
</html>